function householderqr(A)
    m,n = size(A)
    R = copy(A)
    Q = Reflections(Matrix(0.0I, m, n))
    for j = 1:min(n,m)
        y = copy(R[j:end,j])
        y[1] += ((y[1] ‚â• 0) ? 1 : -1)*norm(y)
        w = y/norm(y)
        Q.V[j:end,j] = w
        R[j:end,:] = R[j:end,:]-2*w*(w'*R[j:end,:])
    end
    return Q,R
end

